
html,
body
    margin 0px
    height 100%
    overflow hidden

body
    background white
    background-image url("data:image/svg+xml;base64,")
    color white
    font 14px Helvetica, Arial, sans-serif

.container
    height 100%
    position relative
    width 100%

.front
    height 100%
    position absolute
    width inherit

.middle
    background rgba(15, 219, 255, 0.47)
    height 6em
    opacity 1
    transition all 1s ease-in-out

    section
        background-color rgba(64, 110, 148, 0.66)
        border 1px solid #C0C0C0
        border-radius 1em
        color white
        cursor pointer
        display inline-block
        height 7em
        margin .25em
        padding .5em
        text-align center
        width 7em

        img
            width 5em
            height 5em

        p
            margin 0

.pokedex.open
    bottom 15em

.open .middle
    height 85%
    overflow-x hidden
    overflow-y auto

.open .front .panel
    transition all .2s ease-in-out
    visibility hidden
    opacity 0

.pokedex
    border-radius 10em
    bottom 0em
    height 100%
    margin 0 auto
    position relative
    transition all 1s ease-in-out
    width 40em

    .circle-left-top,
    .circle-right-top,
    .circle-right-bottom,
    .circle-left-bottom
        border-left 1em solid transparent
        border-right 1em solid transparent
        display inline-block
        height 15em
        width 15em

    .circle-right-top,
    .circle-left-top
        border-bottom 1em solid black
        border-top 1em solid transparent

    .circle-right-bottom,
    .circle-left-bottom
        border-bottom 1em solid transparent
        border-top 1em solid black

    .circle-right-top
        border-radius 0 0 0 100%
        float right
        margin-top -1em

    .circle-left-top
        border-radius 0 0 100% 0
        left 0em
        margin-top -1em

    .circle-right-bottom
        border-radius 100% 0 0 0
        float right
        margin-top 2em

    .circle-left-bottom
        border-radius 0 100% 0 0
        left 0em
        margin-top 2em

    .bottom,
    .top
        background #DC143C
        height 18em

    .top
        border-radius 5em 5em 0 0

    .bottom
        border-radius 0 0 5em 5em
        bottom 0
        width inherit

    .panel,
    .divisor,
    .divisor .button
        position absolute

    .panel
        background black
        border 1em solid lightblue
        border-radius 100%
        height 15em
        right 11.5em
        top 12.5em
        transition all 1s ease-in-out
        width 15em
        z-index 1

    .divisor
        background lightblue
        bottom 4.5em
        height 6em
        width 100%

        .button
            background #00CED1
            border .5em solid lightblue
            border-radius 100%
            bottom -1em
            box-shadow 0 .5em 0 #90B0B3
            cursor pointer
            height 8em
            left 2.8em
            transition all .1s linear
            width 8em

        .button:active
            box-shadow 0 2px 0 #8C96A6!important
            transform translateY(3px)!important

::-webkit-scrollbar
    width 1em

::-webkit-scrollbar-track
    -webkit-box-shadow 0 0 6px gray inset;
    border-radius 5em gray solid

::-webkit-scrollbar-thumb
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)
    background-color rgba(0,0,0,0.3)
    border-radius 10px

.modalInformation
    right 75em
    transition all .51s ease-in-out
    visibility hidden

    button,
    button:active
        background-color transparent
        border 1px solid white
        border-radius 100%
        color white
        cursor pointer
        height 2em
        margin .5em
        position absolute
        right 0
        width 2em

.modalInformation.hide
    //display inline
    background rgba(40, 64, 232, 0.28)
    height 100%
    position relative
    right 75em
    transition all 2s cubic-bezier(0.18, -0.25, 1, -0.09);
    visibility hidden
    width 100%
/*
    height 100%
    right 0em
    transition all .51s ease
    visibility visible
    width 100%
*/

.modalInformation.show
    background rgba(40, 64, 232, 0.28)
    height 100%
    position absolute
    right 0em
    transition all .51s ease
    visibility visible
    width 100%
    top 0


.view-animate-container
    height 100%
    overflow-x hidden
    position relative


.view-animate
    padding 10px

.view-animate.ng-enter
  transition  all 5.8s ease
  display block
  width 100%
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  padding 10px
  color red!important

.view-animate.ng-leave
  transition  all 5.8s ease
  display block
  width 96%
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  padding 10px


.view-animate.ng-enter
  left 100%
.view-animate.ng-leave
    left -100%
.view-animate.ng-enter.ng-enter-active
  left 0

.view-animate.ng-leave.ng-leave-active
  left -100%


