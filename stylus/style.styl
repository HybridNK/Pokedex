@import url(http://fonts.googleapis.com/css?family=Droid+Sans)
html
body
    margin 0px
    height 100%
    overflow hidden
body
    background white
    background-image url("data:image/svg+xml;base64,")
    color white
    font 15px
    font-family 'Droid Sans', sans-serif
a
    color transparent
    text-decoration none

.container
    height 100%
    position relative
    width 100%
.front
    height 100%
    position absolute
    width inherit
    .panel
        z-index 1
.middle
    background rgba(15, 219, 255, 0.47)
    height 6em
    opacity 1
    transition all 1s ease-in-out
    section
        background-color rgba(64, 110, 148, 0.66)
        border 1px solid #C0C0C0
        border-radius 1em
        color white
        cursor pointer
        display inline-block
        height 5em
        margin .55em
        padding .5em
        text-align center
        width 5em
        img
            width 4em
            height 4em
        p
            margin 0
            font-size 8pt
        a
            text-decoration none
            color white
.open .middle
    height 85%
    overflow-x hidden
    overflow-y auto
.open .front .panel
    opacity 0
    transition all .5s ease-in-out
    z-index -1
.view
    height inherit
    &-container
        height 100%
        position relative
    &-container > &.ng-animate
        left 0
        min-height 500px
        position absolute
        top 0
        width 100%
    &.ng-enter
    &.ng-leave
        transition .3s linear all
    &.ng-enter
        transform translateX(100%)
    &.ng-enter.ng-enter-active
    &.ng-leave
        transform translateX(0%)
    &.ng-leave.ng-leave-active
        transform translateX(-100%)
.record
    background-color rgba(64, 110, 148, 0.66)
    border 1px solid #c0c0c0
    border-radius 1em
    height 5em
    text-align center
    width 6em
    img
        height inherit
        width inherit
    &.ng-anchor-in
    &.ng-anchor-out
        @extend .record
        transform rotate(360deg)
    &.ng-anchor
        transition .25s linear all
        height 11em
        width 11em
        img
            -webkit-filter blur(.25em)
            -moz-filter blur(.25em)
            -o-filter blur(.25em)
            -ms-filter blur(.25em)
            filter blur(.25em)
            transition 1s linear all
            height 100%
            width 100%
            position relative
.listar
    text-align center
.modal
    visibility hidden
    section
        background transparent
        border-style none
        height 11em
        text-align center
        width 11em
    section img
        height 10em
        width 10em
article
    position relative
    width inherit
    display inline-block
    margin-left 2em
    .pokemon
        widows 80%
        display inherit
        .line
            margin 0 auto
            display flex
            width 90%

        &-attributes
            display block
            h3
                clear both
                color white
                float left
                margin 0px
                margin-top 1.25em
                text-transform none
                width 100%
            ul
                clear both
                float left
                list-style none
                width 100%
                li
                    border-radius .5em
                    float left
                    margin 0.5em .5em 0 0
                    padding 0
                    text-align center
                    width 5em
                    a
                        color white
                        display block
                        float left
                        line-height 100%
                        padding .5em 0
                        width 100%
    span
        background rgba(0, 187, 249, 0.4)
        border 1px dotted rgba(0, 187, 249, 0.4)
        padding 0 1em 0 .8em
        margin .2em
        border-radius 1em
    label
        width 8em

::-webkit-scrollbar
    width 1em
::-webkit-scrollbar-track
    -webkit-box-shadow 0 0 6px gray inset;
    border-radius 5em gray solid
::-webkit-scrollbar-thumb
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)
    background-color rgba(0,0,0,0.3)
    border-radius 10px

 @import 'mixin.styl'
 @import 'pokedex.styl'
 @import 'types.styl'