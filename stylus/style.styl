
html,
body
    margin 0px
    height 100%
    overflow hidden

body
    background white
    background-image url("data:image/svg+xml;base64,")
    color black
    font 12px Helvetica, Arial, sans-serif

.container
    height 100%
    width 100%
    position relative

.front
    position absolute
    height 100%
    width inherit

.middle
    transition all 1s ease-in-out
    background rgba(15, 255, 255, 0.47)
    height 6em
    opacity 1

    section
        border 1px solid #C0C0C0
        background-color rgba(56, 57, 66, 0.47)
        border-radius 1em
        display inline-block
        width 6em
        height 6em
        margin .25em
        cursor pointer
        padding .5em
        text-align center
        color white

        img
            width 5em
            height 5em

        p
            margin 0

.pokedex.open
    bottom 15em

.open .middle
    height 85%
    overflow auto

.open .front .panel
    transition all .2s ease-in-out
    visibility hidden
    opacity 0

.pokedex
    transition all 1s ease-in-out
    border-radius 10em
    height 100%
    margin 0 auto
    position relative
    width 40em
    bottom 0em

    .circle-left-top,
    .circle-right-top,
    .circle-right-bottom,
    .circle-left-bottom
        border-left 1em solid transparent
        border-right 1em solid transparent
        display inline-block
        height 15em
        width 15em

    .circle-right-top,
    .circle-left-top
        border-bottom 1em solid black
        border-top 1em solid transparent

    .circle-right-bottom,
    .circle-left-bottom
        border-bottom 1em solid transparent
        border-top 1em solid black

    .circle-right-top
        border-radius 0 0 0 100%
        float right
        margin-top -1em

    .circle-left-top
        border-radius 0 0 100% 0
        left 0em
        margin-top -1em

    .circle-right-bottom
        border-radius 100% 0 0 0
        float right
        margin-top 2em

    .circle-left-bottom
        border-radius 0 100% 0 0
        left 0em
        margin-top 2em

    .bottom,
    .top
        background #DC143C
        height 18em

    .top
        border-radius 5em 5em 0 0

    .bottom
        border-radius 0 0 5em 5em
        width inherit
        bottom 0

    .panel,
    .divisor,
    .divisor .button
        position absolute

    .panel
        transition all 1s ease-in-out
        background black
        border 1em solid lightblue
        border-radius 100%
        top 12.5em
        height 15em
        right 11.5em
        width 15em
        z-index 1

    .divisor
        background lightblue
        bottom 4.5em
        height 6em
        width 100%

        .button
            background #00CED1
            border .5em solid lightblue
            border-radius 100%
            bottom -1em
            height 8em
            left 2.8em
            width 8em
            box-shadow 0 .5em 0 #90B0B3
            cursor pointer
            transition all .1s linear

        .button:active
            box-shadow 0 2px 0 #8C96A6!important
            transform translateY(3px)!important

::-webkit-scrollbar
    width 1em

::-webkit-scrollbar-track
    -webkit-box-shadow 0 0 6px gray inset;
    border-radius 5em gray solid

::-webkit-scrollbar-thumb
    border-radius 10px
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)
    background-color rgba(0,0,0,0.3)

.modalInformation
    visibility hidden
    background rgba(5, 113, 255, 0.57)
    width 100%
    height inherit
    position absolute

.modalInformation .active
    visibility visible
    background rgba(5, 113, 255, 0.57)
    width 100%
    height inherit
    position absolute
